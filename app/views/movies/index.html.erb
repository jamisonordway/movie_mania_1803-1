<h1> All Movies </h1>

<% @movies.each do |movie| %>
  <div id="movie_<%= movie.id %>">
    <h2><%= movie.title %></h2>
    <p><%= movie.description %></p>
    <h2>Awards for this Movie: </h2>
    <% binding.pry %>
    <p> movie.awards </p>
    <%= button_to 'Add this movie to cart', carts_path(movie_id: movie.id) %>
  </div>
<% end %>
