<h1> All Movies </h1>

<% @movies.each do |movie| %>
  <div id="movie_<%= movie.id %>">
    <h2><%= movie.title %></h2>
    <p><%= movie.description %></p>


    <h2>Awards for this Movie: </h2>
    <% movie.awards.each do |award| %>
    <p>Award name: <%= award.name %></p>
    <% end %>

    <% movie.movie_awards.each do |award| %>
    <p> Award Year: <%= award.year %></p>
    <% end %>


    <%= button_to 'Add this movie to cart', carts_path(movie_id: movie.id) %>
  </div>
<% end %>
